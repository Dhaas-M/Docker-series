def image

pipeline {
    agent any 
    stages {
        stage('build') {
            steps {
                script {
                    image = docker.build("dhaasarathy/node:v1", "--pull -f nodejs-docker/Dockerfile")
                }
            }
        }
        stage('test') {
            steps {
                script {
                    container = image.run()
                    constainer.stop()
                }
            }
        }
    }
}